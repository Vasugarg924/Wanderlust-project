<%- layout("layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <h1 class="col-6 offset-4">SignUp on Wanderlust</h1>
        <div class="col-8 offset-2">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" type="text" class="form-control" required id="usename">
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" type="text" class="form-control" required id="email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" required id="password">
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
        
    </div>